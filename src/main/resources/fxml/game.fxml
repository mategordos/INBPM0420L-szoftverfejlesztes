<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="800" prefWidth="800" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="playerName" alignment="CENTER" style="-fx-label-padding: 30;" text="Label">
                    <font>
                        <Font name="Space Bd BT Bold" size="20.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <GridPane fx:id="board" alignment="CENTER" gridLinesVisible="true" maxHeight="-Infinity" maxWidth="-Infinity"
                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="800" prefWidth="800"
                  style="-fx-background-insets: 30;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
        </GridPane>
    </center>
    <bottom>
        <Button fx:id="endTurn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="End turn"
                textFill="#e4200b" BorderPane.alignment="CENTER">
            <font>
                <Font name="Space Bd BT Bold" size="18.0"/>
            </font>
        </Button>
    </bottom>
</BorderPane>
